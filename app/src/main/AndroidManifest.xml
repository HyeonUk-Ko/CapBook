<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ourgroupbooksystem">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OurgroupBookSystem"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name=".ui.main.personfragment"
            android:exported="true"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name=".ui.main.login_main"
            android:exported="true"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.favoritefragment"
            android:exported="true"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name=".ui.main.homefragment"
            android:exported="true"
            tools:ignore="Instantiatable">
        </activity>
        <activity android:name=".ui.main.register_main"
            android:exported="true"
            tools:ignore="Instantiatable">

        </activity>

        <activity android:name=".ui.main.MainActivitys"
            android:exported="true">
        </activity>

    </application>
    

</manifest>