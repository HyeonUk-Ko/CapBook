<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#DDDDDD"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="4"
                android:background="#CCCCCC"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="서적 이름"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:minWidth="38dp"
                android:text="출판일"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/date_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="출판일"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:minWidth="38dp"
                android:text="저자"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="저자명"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:text="출판사"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/made_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="출판사 정보"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:text="가격"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/price_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="가격 정보"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:text="재고"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="재고 정보"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:text="ISBN"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />


            <TextView
                android:id="@+id/ser_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="ISBN값"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:layout_margin="10dp"
                android:text="닫기"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>