<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서 신청하기"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청하시는 책의 대한 정보를 빈칸 없이 적어주세요"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <EditText
                android:id="@+id/bookNameForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittxt"
                android:ems="10"
                android:hint="제목"
                android:textCursorDrawable="@drawable/edittxt_cursor" />

            <EditText
                android:id="@+id/authorForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittxt"
                android:ems="10"
                android:hint="저자명"
                android:textCursorDrawable="@drawable/edittxt_cursor" />

            <EditText
                android:id="@+id/publishedDateForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittxt"
                android:ems="10"
                android:hint="출판일"
                android:layout_margin="10dp"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@drawable/edittxt_cursor" />

            <EditText
                android:id="@+id/publisherForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:background="@drawable/custom_edittxt"
                android:ems="10"
                android:hint="출판사"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@drawable/edittxt_cursor" />

            <EditText
                android:id="@+id/priceForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittxt"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="가격 정보"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@drawable/edittxt_cursor" />

            <EditText
                android:id="@+id/isbnForBookApply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittxt"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="시리얼 번호"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@drawable/edittxt_cursor" />


        </LinearLayout>

        <Button
            android:id="@+id/submitApplyBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="신청하기"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold">

        </Button>



    </LinearLayout>

</LinearLayout>